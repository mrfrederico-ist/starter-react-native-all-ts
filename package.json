{
  "name": "StarterReactNativeAll",
  "version": "0.0.1",
  "description": "Starter project for react-native (web/electron/ios/android/)",
  "repository": "git@github.com:mrfrederico-ist/starter-react-native-all-ts.git",
  "engines": {},
  "license": "MIT",
  "scripts": {
    "rn-watch": "./node_modules/.bin/tsc --watch",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "test": "jest",
    "web": "webpack-dev-server --config web/webpack.config.js"
  },
  "dependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-native": "^0.42.0",
    "reactxp": "0.42.0-rc.20"
  },
  "devDependencies": {
    "@types/jest": "^20.0.4",
    "@types/node": "^8.0.13",
    "@types/webpack": "^3.0.4",
    "babel-core": "^6.21.0",
    "babel-eslint": "6.1.2",
    "babel-jest": "20.0.3",
    "babel-loader": "^6.2.10",
    "babel-preset-react-native": "2.0.0",
    "file-loader": "^0.10.0",
    "jest": "^20.0.4",
    "react-hot-loader": "3.0.0-beta.6",
    "react-test-renderer": "^15.6.1",
    "ts-jest": "^20.0.7",
    "tslint": "^5.5.0",
    "tslint-react": "^3.0.0",
    "typescript": "^2.4.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.3.0",
    "webpack-dev-server": "^2.4.2"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "cacheDirectory": ".jest/cache"
  }
}
